@model IEnumerable<WebApplication8.Models.Customer>

<h2>Invoices</h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceId)
        </th>
        <th>
            Customer Last Name
        </th>
        <th>
            Customer First Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeFirst) Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeLast) Name
        </th>
        

    </tr>

    @{var count = 1;}
    @foreach (var item in Model)
    {
<tr>
    <td>
        @count.   @Html.DisplayFor(modelItem => item.InvoiceId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeFirst) 
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeLast)
    </td>

    @{count += 1;}
</tr>
    }

</table>

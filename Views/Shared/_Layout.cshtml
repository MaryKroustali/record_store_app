<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Record Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Records", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" >
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
            <div class="menu" >
                @Html.ActionLink("List of Albums", "Index", "Albums");
                @Html.ActionLink("List of Artists", "Index", "Artists")
                @Html.ActionLink("List of Customers", "Index", "Customers")
                @Html.ActionLink("List of Employees", "Index", "Employees")
                @Html.ActionLink("List of Genres", "Index", "Genres")
                @Html.ActionLink("List of Invoices", "Index", "Invoices")
                @Html.ActionLink("List of Invoice Lines", "Index", "InvoiceLines")
                @Html.ActionLink("List of Media Types", "Index", "MediaTypes")
                @Html.ActionLink("List of Playlists", "Index", "Playlists")
                @Html.ActionLink("List of Tracks", "Index", "Tracks")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Record Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
